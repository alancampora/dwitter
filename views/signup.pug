extends layouts/login-layout.pug

block content 
    .loginContainer 
        h1 Registro 

        form#formulario(method="post", onsubmit="event.preventDefault(); validarFormulario();") 

            p.errorMessage #{errorMessage}

            input(type="text", name="usuario", placeholder="Usuario", required=""  value=usuario) 
            input(type="email", name="email", placeholder="Email", required=""  value=email) 
            input#contrasenia(type="password", name="contrasenia", placeholder="Contraseña", required=""  value=constrasenia)
            input#confirmarContrasenia(type="password", name="confirmarContrasenia", placeholder="Confirmar contraseña", required="")
            input(type="submit", value="Registrarme")

        a(href="/login") ¿Ya tenés una cuenta? Ingresá!

    script. 
        const campoContrasenia = document.getElementById("contrasenia");
        const confirmarContrasenia = document.getElementById("confirmarContrasenia");
        const form = document.getElementById("formulario");

        const validarFormulario = () => {
            campoContrasenia.value !== confirmarContrasenia.value ? alert("Las contraseñas no coinciden") : form.submit();
        }


